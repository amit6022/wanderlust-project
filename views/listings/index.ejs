<% layout("/layouts/boilerplate") %>
<body>
  <style>
    .filters {
      display: flex;
      flex-wrap: nowrap;
      align-items: center;
      justify-content: flex-start; /* Align items to start (left) */
    }

    .filter {
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      box-shadow: 0px 0px 10px wheat;
      border-radius: 10px;
      transition: transform 0.5s ease-in-out;
      transform-origin: center;
    }

    .filter i {
      display: inline-block; /* Necessary for width to apply */
      width: 50px; /* Increase as needed (default icon width â‰ˆ auto) */
      font-size: 1.5rem; /* Increase size if needed */
      text-align: center; /* Center the icon inside width */
    }

    .filter:hover {
      cursor: pointer;
      box-shadow: 4px 4px 15px royalblue;
      border-radius: 15px;
      transform: scaleX(1.5); /* Expand horizontally from center */
    }

    .tax-info {
      display: none;
    }

    .taxtoggle {
      /* border: 1px solid black; */
      border-radius: 1rem;
      height: 3.25rem;
      padding: 1rem;
      margin-left: auto; /* Push toggle to the far right */
      display: flex;
      align-items: center;
      box-shadow: 0px 0px 10px wheat;
    }

    .filter-link {
      text-decoration: none;
      color: black;
    }
  </style>

  <div class="filters">
    <a class="filter-link" href="/listings/category/Trending">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
    </a>

    <a class="filter-link" href="/listings/category/Rooms">
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
    </a>

    <a class="filter-link" href="/listings/category/IconicCity">
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
    </a>

    <a class="filter-link" href="/listings/category/Mountains">
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Mountain</p>
      </div>
    </a>

    <!-- Bootstrap toggle  -->
    <div class="taxtoggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Default total after taxes</label
        >
      </div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <%for(let listing of allListings) {%>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top"
          alt="listing_img"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%></b><br />
            &#8377; <%=listing.price.toLocaleString("en-IN")%> / night
            <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>
</body>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
